<link rel="stylesheet" href="/css/sign.css" />
<div id="container">
  <h1>Instagram</h1>
  <div id="form-container">
    <div class="form-group">
      <input name="email" type="email" required placeholder="Email" />
    </div>

    <div class="form-group">
      <input
        type="password"
        name="password"
        placeholder="Password"
        minlength="8"
      />
    </div>

    <button class="sign-btn" id="log-in">Log In</button>
  </div>
  <div id="get-forgot-form">
    <a href="/accounts/password/forgot">Forgot Password?</a>
  </div>
</div>
<div id="container-ask">
  <p>Don't hav an account? <a href="/accounts/signup">Sign up</a></p>
</div>
